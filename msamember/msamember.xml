	<name>User - MSA Member</name>
	<author>David Findlay</author>
	<creationDate>January 2008</creationDate>
	<copyright>(C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>2.5.0</version>
	<description>PLG_USER_MSAMEMBER_XML_DESCRIPTION</description>

	<files>
		<filename plugin="msamember">msamember.php</filename>
		<filename>index.html</filename>
		<folder>profiles</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_msamember.ini</language>
		<language tag="en-GB">en-GB.plg_msamember.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic"
				addfieldpath="/administrator/components/com_content/models/fields">
				<field name="register-require-user" type="spacer" class="text"
					label="PLG_USER_MSAMEMBER_FIELD_NAME_REGISTER_REQUIRE_USER"
				/>

				<field
					name="register-require_msanumber"
					type="text"
					label="Member Number:"
					description="PLG_USER_MSAMEMBER_FIELD_MSANUMBER_DESC"
				>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>
				<field
					name="register-require_club"
					type="text"
					label="PLG_USER_MSAMEMBER_FIELD_CLUB_LABEL"
					description="PLG_USER_MSAMEMBER_FIELD_CLUB_DESC"
				>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>
				
				<field
					name="register-require_dob"
					type="list"
					label="PLG_USER_MSAMEMBER_FIELD_DOB_LABEL"
					description="PLG_USER_MSAMEMBER_FIELD_DOB_DESC"
				>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>


				<field
					name="register-require_tos"
					type="list"
					default="0"
					label="PLG_USER_MSAMEMBER_FIELD_TOS_LABEL"
					description="PLG_USER_MSAMEMBER_FIELD_TOS_DESC"
				>
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="0">JDISABLED</option>
				</field>
				<field
					name="register_tos_article"
					type="modal_article"
					label="PLG_USER_MSAMEMBER_FIELD_TOS_ARTICLE_LABEL"
					description="PLG_USER_MSAMEMBER_FIELD_TOS_ARTICLE_DESC"
				/>


				<field name="spacer1" type="spacer"
					hr="true"
				/>
				<field name="profile-require-user" type="spacer" class="text"
					label="PLG_USER_MSAMEMBER_FIELD_NAME_PROFILE_REQUIRE_USER"
				/>

				<field
					name="profile-require_msanumber"
					type="text"
					label="PLG_USER_MSAMEMBER_FIELD_MSANUMBER_LABEL"
					description="PLG_USER_MSAMEMBER_FIELD_MSANUMBER_DESC"
				 >
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>
				<field
					name="profile-require_club"
					type="text"
					label="PLG_USER_MSAMEMBER_FIELD_CLUB_LABEL"
					description="PLG_USER_MSAMEMBER_FIELD_CLUB_DESC"
				 >
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>
				<field
					name="profile-require_dob"
					type="list"
					label="PLG_USER_MSAMEMBER_FIELD_DOB_LABEL"
					description="PLG_USER_MSAMEMBER_FIELD_DOB_DESC"
				 >
					<option	value="2">JOPTION_REQUIRED</option>
					<option	value="1">JOPTION_OPTIONAL</option>
					<option	value="0">JDISABLED</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
